{
  "name": "penpad-workspace",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "demos/*"
    ],
    "nohoist": [
      "**/classnames",
      "**/classnames/**",
      "**/clarity-icons-svg",
      "**/clarity-icons-svg/**",
      "**/sanitize.css",
      "**/sanitize.css/**"
    ]
  },
  "repository": "https://github.com/rstacruz/penpad.git",
  "author": "Rico Sta. Cruz <rstacruz@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "yarn workspace @rstacruz/penpad prepare",
    "prettier:check": "prettier --list-different 'packages/*/src/**/*.{js,jsx,ts,tsx}'",
    "prettier:fix": "prettier --write 'packages/*/src/**/*.{js,jsx,ts,tsx}'",
    "penpad:watch": "yarn workspace @rstacruz/penpad watch",
    "tsc:check": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "css_modules:update": "tcm 'packages/*/src/**/*.module.css' && prettier --write 'packages/*/src/**/*.module.css.d.ts'",
    "gatsby:develop": "yarn workspace @penpad/gatsby-demo gatsby develop --host ${HOST:-0.0.0.0} --port ${PORT:-23300}",
    "develop": "run-p -sl penpad:watch gatsby:develop",
    "test:run": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "jest-dom": "^3.1.3",
    "jest-svg-transformer": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "react-hooks-testing-library": "^0.4.0",
    "react-testing-library": "^6.1.2",
    "ts-jest": "^24.0.2",
    "typed-css-modules": "^0.4.2",
    "typescript": "^3.4.3"
  }
}
