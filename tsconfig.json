{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    // Set to false for definitions
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "penpad": ["packages/penpad/src"],
      "@rstacruz/penpad": ["packages/penpad/src"]
    },
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": [
    "packages/*/src",
    "demos/*/src",
    "types"
  ],
  "exclude": [
    "packages/*/.rpt2_cache",
    "packages/*/dist",
    "demos/gatsby/.cache",
    "dist"
  ]
}
